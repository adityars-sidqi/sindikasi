<?xml version="1.0" encoding="UTF-8"?>

<zk>
	<!-- [Optional]
	Uncomment if you want to defines the application's name 
	
	<preference>
		<name>org.zkoss.zk.ui.WebApp.name</name>
		<value>sindikasi</value>
	</preference>
	-->
	<device-config>
		<device-type>ajax</device-type>
		<timeout-uri>/timeout.zul</timeout-uri><!-- An empty URL can cause the browser to reload the same URL -->
	</device-config>
	<preference>
		<name>org.zkoss.zk.ui.WebApp.name</name>
		<value>SINDIKASI</value>
	</preference>
	
	<listener>
		<listener-class>com.sdd.utils.db.HibernateListeners</listener-class>
	</listener>

	<listener>
		<listener-class>com.sdd.utils.thread.ThreadPoolListeners
		</listener-class>
	</listener>

	<listener>
		<listener-class>com.sdd.utils.scheduler.SchedulerService
		</listener-class>
	</listener>
	
	<system-config>
		<label-location>/WEB-INF/zk-label.properties</label-location>
	</system-config>
	
	<library-property>
		<name>org.zkoss.theme.preferred</name>
		<value>iceblue_c</value>
	</library-property>
	
	<library-property>
		<name>org.zkoss.zul.Paging.mold</name>
		<value>os</value>
	</library-property>

	<library-property>
		<name>maxThreadPool</name>
		<value>50</value>
	</library-property>

	<library-property>
		<name>maxFlush</name>
		<value>40</value>
	</library-property>

	<library-property>
		<name>maxBatchCommit</name>
		<value>20000</value>
	</library-property>
	
</zk>
